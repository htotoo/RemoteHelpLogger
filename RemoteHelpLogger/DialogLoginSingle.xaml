<Window x:Class="RemoteHelpLogger.DialogLoginSingle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHelpLogger"
        xmlns:properties="clr-namespace:RemoteHelpLogger.Properties" 
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.strLoginDialogTitle}" Height="155.745" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label" Content="{x:Static properties:Resources.strEnterUserName}" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Height="23" Margin="10,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="0"/>
        <Button x:Name="button" Content="{x:Static properties:Resources.strOk}" HorizontalAlignment="Left" Margin="207,88,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" TabIndex="1" IsDefault="True"/>

    </Grid>
</Window>
