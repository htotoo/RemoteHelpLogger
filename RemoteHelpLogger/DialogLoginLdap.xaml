<Window x:Class="RemoteHelpLogger.DialogLoginLdap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHelpLogger"
        xmlns:properties="clr-namespace:RemoteHelpLogger.Properties" 
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.strLoginDialogTitle}" Height="212" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnOk" Content="{x:Static properties:Resources.strOk}" Margin="0,0,10,10" Click="btnOk_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" TabIndex="2" IsDefault="True"/>
        <Label x:Name="label" Content="{x:Static properties:Resources.strEnterUserName}" Margin="10,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-2.241,-0.491"/>
        <TextBox x:Name="txtUsername" Height="23" Margin="10,36,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="0"/>
        <Label x:Name="label1" Content="{x:Static properties:Resources.strEnterPassword}" Margin="10,69,10,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Margin="10,100,10,0" VerticalAlignment="Top" Height="23" TabIndex="1"/>

    </Grid>
</Window>
